<!-- LOGIN -->
<div id="login" class="nav-target hidden">
    <div class="flex flex-col lg:flex-row">
        <div class="p-4 basis-1 md:basis-1/3 w-full">
            <div class="flex flex-col">
                <h3 class="mb-4 font-semibold text-gray-900 dark:text-white">
                    Login properties
                </h3>
                <ul class="w-full text-sm font-medium text-gray-900 border border-gray-200 rounded-lg dark:bg-gray-700 dark:border-gray-600 dark:text-white">
                    {{#each loginProperties}}
                        <li class="border-b border-gray-200 rounded-t-lg dark:border-gray-600">
                            <div class="flex items-center ps-3">
                                <input type="checkbox" value=""
                                       class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-700 dark:focus:ring-offset-gray-700 focus:ring-2 dark:bg-gray-600 dark:border-gray-500"
                                       id="{{this.id}}">
                                <label for="{{this.id}}"
                                       class="w-full py-3 ms-2 text-sm font-medium text-gray-900 dark:text-gray-300">
                                    {{this.name}}
                                </label>
                            </div>
                        </li>
                    {{/each}}
                </ul>
            </div>
        </div>

        <div class="p-4 basis-1 md:basis-1/3">
            <h3 class="mb-4 font-semibold text-gray-900 dark:text-white">
                Authentication methods
            </h3>
            <ul class="w-full text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg dark:bg-gray-700 dark:border-gray-600 dark:text-white">
                {{#each authenticationMethods}}
                    <li class="w-full border-b border-gray-200 rounded-t-lg dark:border-gray-600">
                        <div class="flex items-center ps-3">
                            <input type="checkbox"
                                   class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-700 dark:focus:ring-offset-gray-700 focus:ring-2 dark:bg-gray-600 dark:border-gray-500"
                                   id="auth-method-{{@index}}"
                                   name="login-method">
                            <label for="auth-method-{{@index}}"
                                   class="w-full py-3 ms-2 text-sm font-medium text-gray-900 dark:text-gray-300">
                                {{this}}
                            </label>
                        </div>
                    </li>
                {{/each}}
            </ul>
        </div>

        <div class="p-4 basis-1 md:basis-1/3">
            <h3 class="mb-4 font-semibold text-gray-900 dark:text-white">
                Force BankID
            </h3>
            <ul class="w-full text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg dark:bg-gray-700 dark:border-gray-600 dark:text-white">
                {{#isNotSpidProd}}
                    <li class="w-full border-b border-gray-200 rounded-t-lg dark:border-gray-600">
                        <div class="flex items-center ps-3">
                            <input id="bank-id-1" type="radio" value="1" name="list-radio"
                                   class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-700 dark:focus:ring-offset-gray-700 focus:ring-2 dark:bg-gray-600 dark:border-gray-500">
                            <label for="bank-id-1"
                                   class="w-full py-3 ms-2 text-sm font-medium text-gray-900 dark:text-gray-300">BankID
                                NO</label>
                        </div>
                    </li>
                    <li class="w-full border-b border-gray-200 rounded-t-lg dark:border-gray-600">
                        <div class="flex items-center ps-3">
                            <input id="bank-id-2" type="radio" value="2" name="list-radio"
                                   class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-700 dark:focus:ring-offset-gray-700 focus:ring-2 dark:bg-gray-600 dark:border-gray-500">
                            <label for="bank-id-2"
                                   class="w-full py-3 ms-2 text-sm font-medium text-gray-900 dark:text-gray-300">BankID
                                SE</label>
                        </div>
                    </li>
                    <li class="w-full border-b border-gray-200 rounded-t-lg dark:border-gray-600">
                        <div class="flex items-center ps-3">
                            <input id="bank-id-3" type="radio" value="3" name="list-radio"
                                   class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-700 dark:focus:ring-offset-gray-700 focus:ring-2 dark:bg-gray-600 dark:border-gray-500">
                            <label for="bank-id-3"
                                   class="w-full py-3 ms-2 text-sm font-medium text-gray-900 dark:text-gray-300">BankID
                                FI</label>
                        </div>
                    </li>
                {{/isNotSpidProd}}
                {{#isSpidProdWithActiveBankId}}
                    <li class="w-full border-b border-gray-200 rounded-t-lg dark:border-gray-600">
                        <div class="flex items-center ps-3">
                            <input id="bank-id-1" type="radio" value="" name="list-radio"
                                   class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-700 dark:focus:ring-offset-gray-700 focus:ring-2 dark:bg-gray-600 dark:border-gray-500">
                            <label for="bank-id-1"
                                   class="w-full py-3 ms-2 text-sm font-medium text-gray-900 dark:text-gray-300">BankID</label>
                        </div>
                    </li>
                {{/isSpidProdWithActiveBankId}}

            </ul>
        </div>
    </div>
    <div class="flex flex-col lg:flex-row">
        <div class="p-4 basis-1/2">
            <label for="preferred-email"
                   class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                Preferred email(optional)
            </label>
            <input type="text" id="preferred-email"
                   class="block w-full p-2 text-gray-900 border border-gray-300 rounded-lg bg-gray-50 sm:text-xs focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500">
        </div>
    </div>
    <div class="flex flex-col lg:flex-row">
        <div class="p-4 basis-1/2">
            <label for="locale"
                   class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                Locale
            </label>
            <select id="locale"
                    class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500">
                <option value="nb_NO">nb_NO</option>
                <option value="fi_FI">fi_FI</option>
                <option value="sv_SE">sv_SE</option>
                <option selected value="en_US">en_US</option>
            </select>
        </div>
    </div>
    <hr/>


    <div class="p-4">
        <div class="flex justify-between">
            <h3 class="font-semibold text-base text-blueGray-700 " id="sso-account-name">
                Loading...
            </h3>

            <button
                class="py-1 px-2 me-2 mb-2 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-100 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700"
                type="button"
                style="transition:all .15s ease"
                id="update-login-sso"
            >
                Update
            </button>
        </div>
        <div class="flex justify-between">
            <h3 class="font-semibold text-base text-blueGray-700" id="sdk-account-name">
                {{#if userInfo}}
                    You are logged in to SDK Example as <span
                    class="underline">{{userInfo.preferred_username}}</span>
                {{else}}
                    You are not logged in to SDK Example
                {{/if}}
            </h3>

            <button
                class="py-1 px-2 me-2 mb-2 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-100 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700"
                type="button"
                style="transition:all .15s ease"
                id="update-sdk-login"
            >
                Update
            </button>
        </div>
    </div>

    <div class="px-4">
        <div class="inline-flex rounded-md shadow-sm mb-4 flex-col xl:flex-row" role="group">
            <button type="button"
                    class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-s-lg hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-2 focus:ring-blue-700 focus:text-blue-700 dark:bg-gray-800 dark:border-gray-700 dark:text-white dark:hover:text-white dark:hover:bg-gray-700 dark:focus:ring-blue-500 dark:focus:text-white"
                    id="login-button">
                <i class="fa-solid fa-user mr-2"></i>
                Login
            </button>

            <button
                id="fetch-user-from-sdk"
                type="button"
                class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-900 bg-white border-t border-b border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-2 focus:ring-blue-700 focus:text-blue-700 dark:bg-gray-800 dark:border-gray-700 dark:text-white dark:hover:text-white dark:hover:bg-gray-700 dark:focus:ring-blue-500 dark:focus:text-white">
                <i class="fa-regular fa-address-card mr-2"></i>
                Fetch user from SDK
            </button>

            <button
                id="introspect-token"
                type="button"
                class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-900 bg-white border-t border-b border-l border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-2 focus:ring-blue-700 focus:text-blue-700 dark:bg-gray-800 dark:border-gray-700 dark:text-white dark:hover:text-white dark:hover:bg-gray-700 dark:focus:ring-blue-500 dark:focus:text-white">
                <i class="fa-solid fa-bell-concierge mr-2"></i>
                Introspect token
            </button>

            <button
                id="simplified-login"
                type="button"
                class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-900 bg-white border-t border-b border-l border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-2 focus:ring-blue-700 focus:text-blue-700 dark:bg-gray-800 dark:border-gray-700 dark:text-white dark:hover:text-white dark:hover:bg-gray-700 dark:focus:ring-blue-500 dark:focus:text-white">
                <i class="fa-solid fa-handshake-simple mr-2"></i>
                Simplified login
            </button>

            <button
                id="logout-from-sso"
                type="button"
                class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-900 bg-white border-t border-b  border-l border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-2 focus:ring-blue-700 focus:text-blue-700 dark:bg-gray-800 dark:border-gray-700 dark:text-white dark:hover:text-white dark:hover:bg-gray-700 dark:focus:ring-blue-500 dark:focus:text-white">
                <i class="fa-solid fa-user-slash mr-2"></i>
                Logout from SSO
            </button>

            <button
                id="logout-from-sdk"
                type="button"
                class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-e-lg hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-2 focus:ring-blue-700 focus:text-blue-700 dark:bg-gray-800 dark:border-gray-700 dark:text-white dark:hover:text-white dark:hover:bg-gray-700 dark:focus:ring-blue-500 dark:focus:text-white">
                <i class="fa-solid fa-users-slash mr-2"></i>
                Logout from SDK Example
            </button>
        </div>
    </div>
</div>
<script src="dist/login.min.js"></script>
